{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "removeComments": true,
    "target": "ES2017",
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules/*",
    "dist/*",
    "**/*.spec.ts"
  ]
}